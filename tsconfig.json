{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "types": ["@types/node", "@nuxt/types", "./types"]
  },
  "exclude": ["dist", "node_modules", "static"]
}
