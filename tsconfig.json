{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "jsx": "preserve",
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["@nuxt/types", "node"]
  },
  "exclude": ["dist", "node_modules", "static", "tests/coverage", "tests/e2e"],
  "extension": [".ts", ".tsx"]
}
